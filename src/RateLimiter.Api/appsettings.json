{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "Redis": "localhost:6380,connectTimeout=1000,syncTimeout=500,abortConnect=false"
  },
  "RateLimiting": {
    "Store": "Redis",
    "FailOpen": true,
    "CleanupIntervalSeconds": 300,
    "CircuitBreaker": {
      "FailureThreshold": 5,
      "SamplingDurationSeconds": 30,
      "BreakDurationSeconds": 15
    },
    "Rules": {
      "/api/resource": {
        "Limit": 10,
        "Window": "00:01:00",
        "BucketCapacity": 10,
        "RefillRate": 0.16667
      }
    }
  }
}
